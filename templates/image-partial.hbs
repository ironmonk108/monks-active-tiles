<li class="image entry" data-image-id="{{id}}" data-entry-id="{{id}}" data-index="{{i}}" draggable="true">
    <input type="hidden" class="filepath" name="files.{{id}}.name" value="{{name}}">
    <div class="name" data-tooltip="{{name}}">
        <span>{{name}}</span>
    </div>
    <div class="controls">
        <button type="button" class="inline-control icon fas fa-trash fa-sm" data-action="deleteImage"></button>
    </div>
</li>