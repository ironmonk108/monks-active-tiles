<li class="button-row" data-button-id="{{id}}">
    <div class="button-name"><span>{{name}}</span></div>
    <div class="button-goto"><span>{{goto}}</span></div>
    <div class="controls">
        <button type="button" class="inline-control icon fas fa-pencil" data-action="editButton"></button>
        <button type="button" class="inline-control icon fas fa-trash" data-action="removeButton"></button>
    </div>
</li>